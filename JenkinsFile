pipeline {
    agent any

    environment {
        COMPOSE_PROJECT_NAME = "voting_app"
    }

    stages {
        stage('Clone repo') {
            steps {
                git url: 'https://github.com/sats0264/voting_app.git', branch: 'main'
            }
        }

        stage('Build Docker images') {
            steps {
                sh 'docker compose build --no-cache'
            }
        }

        stage('Deploy containers') {
            steps {
                sh 'docker compose down -v || true'
                sh 'docker compose up -d'
            }
        }

        stage('Check health (Redis)') {
            steps {
                script {
                    def redisStatus = sh(script: "docker inspect --format='{{.State.Health.Status}}' voting_app-redis-1", returnStdout: true).trim()
                    if (redisStatus != 'healthy') {
                        error "Redis container not healthy: ${redisStatus}"
                    }
                }
            }
        }
    }

    post {
        always {
            echo "Ã‰tat final des conteneurs :"
            sh 'docker compose ps'
        }
    }
}
